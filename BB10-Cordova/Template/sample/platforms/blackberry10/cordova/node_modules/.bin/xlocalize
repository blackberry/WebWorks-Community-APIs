#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//usr/bin/node" ]; then
  "$basedir//usr/bin/node"  "$basedir/../localize/bin/xlocalize.js" "$@"
  ret=$?
else 
  /usr/bin/node  "$basedir/../localize/bin/xlocalize.js" "$@"
  ret=$?
fi
exit $ret
