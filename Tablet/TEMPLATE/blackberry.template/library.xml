<library>
<!--
 * Change this *.xml file:
 * 
 * 1) Update <entryClass> value to be correct format = [feature namespace].[*.as class name]
 * 2) Update the JavaScript and ActionScript file paths in the <configurations> section.
 * 3) Update the <features> section to include the correct namespaces for this extension.
-->
	<extension id="blackberry.template">
		<entryClass>blackberry.template.Template</entryClass>
	</extension>
	
	<platforms>
		<platform value="AIR">
			<target version="default" config="AIR_XHR" />
		</platform>
	</platforms>

	<configurations>
		<configuration name="AIR_XHR" version="1.0" comment="XHR architecture/Air implementation">			
			<src type="text/javascript" path="js/common/template_dispatcher.js" comment="JS Dispatcher" />
			<src type="text/javascript" path="js/common/template_ns.js" comment="JS interface and partial implementation" />
			<src type="text/actionscript" path="src/Air/Template/src" comment="ActionScript implementation" />
		</configuration>
	</configurations>
	
	<features>
		<feature id="blackberry.template" version="1.0.0">Template AIR JavaScript extension</feature>
    </features>
</library>
